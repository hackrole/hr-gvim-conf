# config file header comment
snippet fcmt "vim conf file comment" !b
"------------------------------------------------------------------
" File: `!v expand('%:t')`
" Author: hackrole
" Email: daipeng123456@gmail.com
" Create At: `date +"%Y-%m-%d"`
" Description: $1
"------------------------------------------------------------------
$0
endsnippet

# comment for section
snippet scmt "vim section comment" !b
"------------------------------------------------------------------
" [${1}] {{{1
"------------------------------------------------------------------
$0
" 1}}}

endsnippet

snippet dein.add "call dein#add ... " !b
call dein#add("$1")
endsnippet

snippet dein.addo "call dein#add ... " !b
call dein#add("$1", {$0})
endsnippet
